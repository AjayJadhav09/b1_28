<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
    <hibernate-mapping>
    	<class name="com.ajay.first_hibernate.entity.User" table="User">
    		<id name="email" type="string">
        		<column name="email" sql-type="VARCHAR" length="25" not-null="true"/>
   		 	</id>
    		<property column="username" name="userName" type="java.lang.String"/>
    		<property column="password" name="password" type="java.lang.String"/>
    		<property column="name" name="name" type="java.lang.String"/>
    		<property column="city" name="city" type="java.lang.String"/>
    	</class>
    </hibernate-mapping>